{
    "name": "local-web-share",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "repository": "https://github.com/zardoy/local-web-share.git",
    "main": "build/index.js",
    "scripts": {
        "start-main": "electron-esbuild --debug",
        "start-renderer": "vite",
        "build-main": "node build-electron.mjs",
        "build-renderer": "vite build",
        "build-app": "tsc && pnpm build-main && pnpm build-renderer",
        "build-pack": "pnpm build-app && pnpm electron-pack",
        "electron-pack": "electron-builder --win",
        "install-robotjs": "npx electron-rebuild -f -t prod,optional,dev -w robotjs"
    },
    "build": {
        "productName": "Local Web Share",
        "appId": "com.zardoy.local-web-share",
        "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
        "asarUnpack": [
            "dist/ui.html",
            "assets/icon.png"
        ],
        "win": {
            "target": "nsis"
        },
        "files": [
            "build/**/*",
            "dist/**/*",
            "assets/**/*"
        ],
        "nsis": {},
        "directories": {
            "buildResources": "assets",
            "output": "release"
        }
    },
    "dependencies": {
        "@emotion/styled": "^11.11.0",
        "@mui/material": "^5.13.4",
        "@types/ws": "^8.5.5",
        "@zardoy/electron-esbuild": "^0.1.0",
        "@zardoy/react-util": "^0.2.0",
        "@zardoy/vit": "^0.1.8",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.1.0",
        "esbuild": "0.16.x",
        "formidable": "^3.4.0",
        "next": "^13.4.4",
        "node-gyp": "^9.4.0",
        "qrcode.react": "^3.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "serve-handler": "^6.1.5",
        "systeminformation": "^5.18.3",
        "twin.macro": "^3.3.1",
        "typed-ipc": "^0.0.3",
        "vite": "^4.3.9",
        "vite-plugin-externals": "^0.6.2",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "robotjs": "^0.6.0",
        "@types/formidable": "^2.0.6",
        "@types/react": "^18.2.9",
        "@types/react-dom": "^18.2.4",
        "@types/serve-handler": "^6.1.1",
        "@zardoy/tsconfig": "^1.5.0",
        "electron": "^22.0.0",
        "electron-builder": "23",
        "typescript": "^5.1.3"
    },
    "pnpm": {
        "packageExtensions": {
            "@zardoy/electron-esbuild": {
                "dependencies": {
                    "esbuild": "^0.16.9"
                }
            }
        }
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 160,
        "endOfLine": "auto"
    }
}
